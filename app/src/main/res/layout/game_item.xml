<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="@color/light_red"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="8dp"
    card_view:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <TextView
            android:id="@+id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Neues Spiel hinzuf체gen"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="Neues Spiel hinzuf체gen" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="@dimen/default_marginTop"
            android:text="Hier Stats eintragen."
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/light_grey"
            android:textSize="18sp"
            tools:text="Hier Stats eintragen." />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_marginTop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_marginTop"
                    android:layout_marginBottom="@dimen/default_marginTop">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datum"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:text="Datum" />

                    <Button
                        android:id="@+id/date_button"
                        style="?android:spinnerStyle"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:paddingHorizontal="@dimen/default_padding"
                        android:text="@string/Datumausw채hlen"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        tools:text="01 JAN 2022" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_marginTop"
                    android:text="Gegner:"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    tools:text="Gegner:" />

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Schreibe den Ort."
                    android:inputType="text"
                    android:paddingHorizontal="@dimen/default_padding"
                    android:paddingVertical="1dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="26sp"

                    tools:text="L체denscheid" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TableRow
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="@dimen/default_marginTop">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Punkte"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            tools:text="Punkte" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="@dimen/default_marginTop">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4te"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            tools:text="4te" />

                        <EditText
                            android:id="@+id/myteam_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="100dp"
                            android:background="@drawable/black_border"
                            android:ems="2"
                            android:inputType="number"
                            android:maxLength="3"
                            android:paddingHorizontal="@dimen/default_padding"
                            android:textAlignment="center"
                            android:textSize="28sp"

                            tools:text="35" />
                    </TableRow>


                    <TableRow android:layout_marginBottom="@dimen/default_marginTop">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gegner"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            tools:text="Gegner" />

                        <EditText
                            android:id="@+id/enemy_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="100dp"
                            android:background="@drawable/black_border"
                            android:ems="2"
                            android:inputType="number"
                            android:maxLength="3"
                            android:paddingHorizontal="@dimen/default_padding"
                            android:textAlignment="center"
                            android:textSize="28sp"

                            tools:text="0" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>